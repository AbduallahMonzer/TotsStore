ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=https://0.0.0.0:443;http://0.0.0.0:80

# Database (with SSL for prod)
DB_HOST=YOUR_PROD_DB_HOST
DB_PORT=5432
DB_NAME=YOUR_PROD_DB_NAME
DB_USER=YOUR_PROD_DB_USER
DB_PASS=YOUR_PROD_DB_PASS
DB_SSLMODE=Require
ConnectionStrings__DefaultConnection=Host=${DB_HOST};Port=${DB_PORT};Database=${DB_NAME};Username=${DB_USER};Password=${DB_PASS};SslMode=${DB_SSLMODE}

# SMTP (production)
SMTP_HOST=smtp.yourprodmail.com
SMTP_PORT=587
SMTP_USER=your_smtp_prod_user
SMTP_PASS=your_smtp_prod_password
ORDER_RECEIVE_EMAIL=you@yourdomain.com

# Frontend URL for CORS
FRONTEND_URL=https://yourdomain.com
